{
  "compilerOptions": {
    /* Language */
    "target": "ES2021",
    "module": "commonjs",
    "lib": [
      "ES2021"
    ],
    /* Paths and Module Resolution */
    "baseUrl": "./",
    "paths": {
      "@root/*": [
        "*"
      ],
    },
    /* Type Declarations */
    "typeRoots": [
      "src/common/types",
      "node_modules/@types"
    ],
    "resolveJsonModule": true,
    /* Output */
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    /* Strictness */
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src",
  ],
  "exclude": [
    "node_modules",
    "data",
    "dist"
  ]
}